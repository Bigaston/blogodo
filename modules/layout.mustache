<!DOCTYPE html>
<html>
	<head>
		<title>{{ article.title }} - {{ site.title }}</title>
		<link rel="stylesheet" type="text/css" href="/static/style.css">
		<meta property="og:title" content="{{ article.title }} - {{ site.title}}" />
		<meta property="og:description" content="{{ article.subtitle }}" />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="{{ site.host }}/p/{{ article.slug }}" />
		<meta property="og:image" content="{{ site.logo }}" />
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
	</head>

	<body>
		<div class="wrapper">
			<p class="backhome"><a href="/">Accueil</a></p>
			{{#article.img}}
				<img class="header-img" src="{{{ article.img }}}" alt="Bannière" />
			{{/article.img}}
			<div class="content">
				<h1>{{ article.title }}</h1>
				<p class="subtitle">{{ article.subtitle }}</p>
				<p class="tags">Tags :  
					{{#article.tags}}
						<a href="/t/{{name}}">{{name}}</a>
					{{/article.tags}}
				</p>

				{{{ article.contents }}}

				{{#article.pubdate}}
					<p class="date">Publié le {{ article.pubdate }}</p>
				{{/article.pubdate}}
			</div>
		</div>
		{{{ site.stat_script }}}
	</body>
</html>
